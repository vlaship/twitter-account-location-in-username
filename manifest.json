{
  "manifest_version": 3,
  "name": "Twitter Account Location Flag",
  "version": "1.2.0",
  "description": "Shows country flag emoji next to Twitter usernames based on account location. Choose between automatic display or manual on-demand mode.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitter Location Flag"
  },
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["countryFlags.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pageScript.js"],
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "twitter-location-flag@example.com",
      "strict_min_version": "109.0"
    }
  }
}

